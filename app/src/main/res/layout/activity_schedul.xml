<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Schedul">
    <RelativeLayout
        android:id="@+id/menuContainer"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        >
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="@dimen/menu_tv_width"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_userXP"
            android:layout_width="@dimen/menu_tv_width"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/tv_username"/>
        <TextView
            android:id="@+id/tv_userLvl"
            android:layout_width="@dimen/menu_tv_width"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/tv_userXP"/>
        <Button
            android:id="@+id/b_newChain"
            android:layout_width="@dimen/menu_tv_width"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/tv_userLvl"
            android:text="New Chain"/>

    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvChains"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/menuContainer"
         />
</RelativeLayout>
