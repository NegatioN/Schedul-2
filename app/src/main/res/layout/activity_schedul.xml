<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Schedul">
    <RelativeLayout
        android:id="@+id/menuContainer"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        style="@style/mainHeader"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"

        >
        <!-- Sum of textfields + button must == 320dp for Nexus S-->
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="@dimen/menu_tv_width"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:textColor="@color/headerText"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:gravity="start"
            />
        <TextView
            android:id="@+id/tv_userXP"
            android:layout_width="@dimen/menu_tv_width"
            android:layout_height="fill_parent"
            android:textColor="@color/headerText"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/tv_username"/>
        <TextView
            android:id="@+id/tv_userLvl"
            android:layout_width="@dimen/menu_lvl_width"
            android:layout_height="fill_parent"
            android:textColor="@color/headerText"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            />

    </RelativeLayout>

    <ListView
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvChains"
        android:layout_below="@id/menuContainer"
        android:layout_above="@+id/botContainer"
         />

    <RelativeLayout
        android:id="@+id/botContainer"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/header_drawable_bottom"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/b_newChain"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:text="New Chain"
            android:layout_margin="1.5dp"
            android:textSize="17sp"
            style="@style/button"/>
        <Button
            android:id="@+id/b_settings"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:text="@string/enter_settings"
            android:layout_margin="1.5dp"
            android:textSize="17sp"
            style="@style/button"/>
    </RelativeLayout>

</RelativeLayout>
