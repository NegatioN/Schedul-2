<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbackground"

    tools:context="main.schedul.joakim.schedul2.CreateChain">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="27dp"
    android:paddingBottom="27dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">
    <EditText
        android:id="@+id/etName"
        android:layout_width="fill_parent"
        android:textColor="@color/darkgrayText"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:hint="@string/enter_name"
/>

    <TextView
        android:id="@+id/tvDays"
        android:textSize="20sp"
        android:textColor="@color/darkgrayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/etName"
        android:text="@string/tv_days"
        android:layout_marginLeft="3.5dp"
        android:layout_marginTop="18dp"

        />

    <Spinner
        android:id="@+id/daysSpinner"
        style="@style/spinnnerStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:spinnerMode="dialog"
        android:layout_below="@id/tvDays"
        android:layout_alignParentLeft="true"
        android:prompt="@string/spinner_header"
        android:entries="@array/day_numbers"
        android:entryValues="@array/day_numbers_values"
        ></Spinner>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/botContainer"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/header_drawable_bottom"
        android:layout_alignParentBottom="true"
        android:padding="3dp"
        android:gravity="center"
        >
    <Button
        android:id="@+id/btnCreate"
        android:text="@string/create_chain_button"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:textSize="17sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="1.5dp"
        style="@style/button"/>
        </RelativeLayout>

</RelativeLayout>
