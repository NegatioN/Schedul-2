<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_editname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <Spinner
        android:id="@+id/daysEditSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_below="@id/et_editname"
        android:prompt="@string/spinner_header"
        android:entries="@array/day_numbers"
        android:entryValues="@array/day_numbers_values"

        ></Spinner>

</RelativeLayout>