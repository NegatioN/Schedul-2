<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<TextView
    android:id="@+id/tv_desc"
    android:text="Velg Bruker"
    android:textSize="18sp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:gravity="center"/>
    <Spinner
    android:id="@+id/spinner_users"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_desc"></Spinner>
    <Button
        android:id="@+id/b_getuser"
        android:text="Hent valgt bruker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_users"/>
    <Spinner
        android:id="@+id/spinner_chains"
        android:layout_below="@id/b_getuser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"></Spinner>
    <Button
        android:text="Lag widget"
        android:id="@+id/b_createwidget"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>